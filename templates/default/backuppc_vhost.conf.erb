# Apache VHost file for Backuppc Web GUI
# Generated by Chef for <%= node[:fqdn]%>

<VirtualHost *:80>
  ServerName backuppc
  ServerAlias backuppc
  DocumentRoot <%= node['backuppc']['cgi_dir'] %>
  LogLevel info
  ErrorLog <%= node['apache']['log_dir'] %>/backuppc-error.log
  CustomLog <%= node[:apache][:log_dir] %>/backuppc-access.log combined
</VirtualHost>
